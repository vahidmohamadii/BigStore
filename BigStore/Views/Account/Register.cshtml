@using BusinessLayer.Dtos.Account
@model RegisterViewModel

@{
    Layout = "_layout";
}
<head>
    <meta charset="UTF-8">
    <title> ثبت نام</title>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script src="/js/jquery.min.js"></script>
</head>
<main class="client-page">
    <div class="container-content">

        <header><h2> عضویت در سایت </h2></header>

        <div class="form-layer">

            <form asp-controller="Account" asp-action="Register" method="post">

                <div class="input-group">
                    <span class="input-group-addon" id="username"><i class="zmdi zmdi-account"></i></span>
                    <input type="text" class="form-control" placeholder="نام کاربری" asp-for="UserName">
                </div>

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input type="text" class="form-control" placeholder="ایمیل" asp-for="Email">
                </div>
                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input type="text" class="form-control" placeholder="رمز عبور" asp-for="Password">
                </div>
                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input type="text" class="form-control" placeholder="تکرار رمز عبور" asp-for="RePassword">
                </div>
     


                <div class="link">
                    <a href="/Account/Login"> <i class="zmdi zmdi-account"></i> ورود به سایت </a>
                </div>

                <button class="btn btn-success"> عضویت در سایت </button>

            </form>
        </div>

    </div>
</main>