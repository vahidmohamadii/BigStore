@using BusinessLayer.Dtos.Wallet;
@model ChargeWalletViewModel

@{
    Layout = "_layout";
}
<head>
    <meta charset="UTF-8">
    <title> شارژ کیف پول</title>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script src="/js/jquery.min.js"></script>
</head>

<main class="client-page">
    <div class="container-content">

        <header><h2> شارژ کیف پول</h2></header>

        <div class="form-layer">

            <form asp-controller="Wallet" asp-action="ChargeWallet" method="post">
                <input type="hidden" asp-for="@User.Identity.Name" />
               <div class="input-group">
                <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                <input type="text" class="form-control" placeholder="مبلغ" asp-for="Amount">
                </div>
                <div class="input-group">
                <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                <input type="text" class="form-control" placeholder="بابت" asp-for="Description">
                </div>


                <button class="btn btn-success"> شارژ کیف پول</button>

            </form>
        </div>

    </div>
</main>