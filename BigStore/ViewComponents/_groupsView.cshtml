@model List<BusinessLayer.Dtos.Group.GroupListViewModel>


<div class="container">
    <nav>
        <span class="responsive-sign"><i class="zmdi zmdi-menu"></i></span>
        <ul style="display: block;">
           @foreach (var Group in Model.Where(x=>x.ParentId==null))
            {
                <li>
                    <a href=""> @Group.TiTle </a>
                    @if(Model.Any(x=>x.ParentId==Group.GroupId))
                    {
                         <ul>
                            @foreach (var Subitem in Model.Where(x=>x.ParentId==Group.GroupId))
                            {
                         
                                <li><a href=""> @Subitem.TiTle</a></li>
                            
                            
                            }
                           
             
                        </ul>
                    
                    }
                   
                </li>
            }

  
      

        </ul>
    </nav>
</div>
