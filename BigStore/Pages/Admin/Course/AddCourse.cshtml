        <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
        <select asp-for="addCourseViewModel.CourseSubGroupId" asp-items="(IEnumerable<SelectListItem>)@ViewData["GetAllGroup"]">
        </select>
    </div>*@

    <div class="form-group">
        <label>فیلم دمو</label>
        <input type="file" asp-for="addCourseViewModel.DemoFile" />
    </div>

    <div class="form-group">
        <label>عکس دوره</label>
        <input type="file" asp-for="addCourseViewModel.ImageFile" />
    </div>

    <button class="btn btn-success"> ثبت </button>

</form>